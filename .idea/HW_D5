//the MaineActivity-->>
class MainActivity : AppCompatActivity() {


    private lateinit var firstNumber: EditText
    private lateinit var secondNumber: EditText
    private lateinit var addButton: Button
    private lateinit var subButton: Button
    private lateinit var multButton: Button
    private lateinit var divButton: Button
    private lateinit var resultTxt: TextView


    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)


        //////////////////////////////////////////////////////
        firstNumber = findViewById(R.id.Enter1Number)
        secondNumber = findViewById(R.id.Enter2Number)

        addButton = findViewById(R.id.btnAdd)
        subButton = findViewById(R.id.btnSup)
        multButton = findViewById(R.id.btnMult)
        divButton = findViewById(R.id.btnDiv)

        resultTxt = findViewById(R.id.txtResult)


        ///////////////////////////////////////////////////////
        addButton.setOnClickListener{
            calAdd()
        }
        subButton.setOnClickListener {
            calSub()
        }
        multButton.setOnClickListener {
            calmult()
        }
        divButton.setOnClickListener {
            calDiv()
        }


        /////////////////////////////////////////////////////////
    }
    fun calAdd(){
        if (firstNumber.text.toString().isNotBlank() && secondNumber.text.toString().isNotBlank()){
           resultTxt.text= ( firstNumber.text.toString().toDouble() + secondNumber.text.toString()
                .toDouble()).toString()
        } else{
            Toast.makeText(this, "plz enter a number", Toast.LENGTH_SHORT).show()
        }
    }    fun calSub(){
        if (firstNumber.text.toString().isNotBlank() && secondNumber.text.toString().isNotBlank()){
            resultTxt.text= ( firstNumber.text.toString().toDouble() - secondNumber.text.toString()
                .toDouble()).toString()
        } else{
            Toast.makeText(this, "plz enter a number", Toast.LENGTH_SHORT).show()
        }
    }    fun calmult(){
        if (firstNumber.text.toString().isNotBlank() && secondNumber.text.toString().isNotBlank()){
            resultTxt.text=  ( firstNumber.text.toString().toDouble() * secondNumber.text.toString()
                .toDouble()).toString()
        } else{
            Toast.makeText(this, "plz enter a number", Toast.LENGTH_SHORT).show()
        }
    }    fun calDiv(){
        if (firstNumber.text.toString().isNotBlank() && secondNumber.text.toString().isNotBlank()){
            resultTxt.text= ( firstNumber.text.toString().toDouble() / secondNumber.text.toString()
                .toDouble()).toString()
        } else{
            Toast.makeText(this, "plz enter a number", Toast.LENGTH_SHORT).show()
        }
    }
}




